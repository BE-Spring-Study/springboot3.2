{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>

    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<!--버튼을 누르면 HTTP 메서드로 특정 게시글의 삭제-->
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">Delete</a>

<a href="/articles">Go to Articles</a>

<!-- 상세 페이지에 댓글 뷰 파일 삽입 -->
{{>comments/_comments}}

{{>layouts/footer}}